<Window x:Class="CrocMadame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrocMadame"
        mc:Ignorable="d"
        Title="Croc File Downloader" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Croc File Downloader" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Input Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Secret Code:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="CodeTextBox" Text="" FontSize="14" Height="35"
                     VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!-- Directory Selection Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Destination Directory:" FontSize="14" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="DirectoryTextBox" Text="" FontSize="14" Height="35"
                         VerticalContentAlignment="Center" Grid.Column="0" IsReadOnly="True"/>
                <Button x:Name="BrowseButton" Content="Browse..." FontSize="14"
                        Height="35" Margin="10,0,0,0" Grid.Column="1" Width="80"/>
            </Grid>
        </StackPanel>

        <!-- Progress Section -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock x:Name="ProgressTextBlock" Text="" FontSize="14" Margin="0,0,0,5"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Button x:Name="DownloadButton" Content="Download" FontSize="16"
                    Width="120" Height="45" FontWeight="Bold"/>
            <Button x:Name="CancelButton" Content="Cancel" FontSize="16"
                    Width="120" Height="45" Margin="20,0,0,0" IsEnabled="False"/>
        </StackPanel>

        <!-- Output Section -->
        <Grid Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Output:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="OutputTextBox" Grid.Row="1" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas"
                     FontSize="12" IsReadOnly="True" Background="#F5F5F5"/>
        </Grid>
    </Grid>
</Window>
