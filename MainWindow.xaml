<Window x:Class="CrocMadame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrocMadame"
        mc:Ignorable="d"
        Title="Croc File Downloader" Height="600" Width="800" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="CrocMadame" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="MainTabControl" x:FieldModifier="public">
            <!-- Receive Tab -->
            <TabItem Header="Receive">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Section -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Secret Code:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="ReceiveCodeTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Directory Selection Section -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Destination Directory:" FontSize="14" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ReceiveDirectoryTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                     VerticalContentAlignment="Center" Grid.Column="0" IsReadOnly="True"/>
                            <Button x:Name="ReceiveBrowseButton" x:FieldModifier="public" Content="Browse..." FontSize="14"
                                    Height="35" Margin="10,0,0,0" Grid.Column="1" Width="80"/>
                        </Grid>
                    </StackPanel>

                    <!-- Relay Settings Section -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Relay:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="ReceiveRelayTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="Leave empty for default relay, or specify host:port for custom relay" FontSize="10" Margin="0,5,0,0" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <Button x:Name="ReceiveDownloadButton" x:FieldModifier="public" Content="Download" FontSize="16"
                                Width="120" Height="45" FontWeight="Bold"/>
                        <Button x:Name="ReceiveCancelButton" x:FieldModifier="public" Content="Cancel" FontSize="16"
                                Width="120" Height="45" Margin="20,0,0,0" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,20">
                        <TextBlock Text="Progress:" FontSize="14" Margin="0,0,0,5"/>
                        <ProgressBar x:Name="ReceiveProgressBar" x:FieldModifier="public" Height="20" Minimum="0" Maximum="100" Value="0"/>
                    </StackPanel>

                    <!-- Blank Section -->
                    <Grid Grid.Row="5"/>

                    <!-- Output Section -->
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Output:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="ReceiveOutputTextBox" x:FieldModifier="public" Grid.Row="1" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas"
                                 FontSize="12" Height="80" IsReadOnly="True" Background="#F5F5F5"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Send Tab -->
            <TabItem Header="Send">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Code Section -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Secret Code:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="SendCodeTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                 VerticalContentAlignment="Center" IsReadOnly="True" Background="#F0F0F0"/>
                    </StackPanel>

                    <!-- File/Directory Selection Section -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="File or Directory to Send:" FontSize="14" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton x:Name="SendFileRadio" x:FieldModifier="public" Content="File" GroupName="SendType" IsChecked="True"/>
                            <RadioButton x:Name="SendDirectoryRadio" x:FieldModifier="public" Content="Directory" GroupName="SendType" Margin="20,0,0,0"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SendPathTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                     VerticalContentAlignment="Center" Grid.Column="0" IsReadOnly="True"/>
                            <Button x:Name="SendBrowseButton" x:FieldModifier="public" Content="Browse..." FontSize="14"
                                    Height="35" Margin="10,0,0,0" Grid.Column="1" Width="80"/>
                        </Grid>
                    </StackPanel>

                    <!-- Relay Settings Section -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Relay:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="SendRelayTextBox" x:FieldModifier="public" Text="" FontSize="14" Height="35"
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="Leave empty for default relay, or specify host:port for custom relay" FontSize="10" Margin="0,5,0,0" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <Button x:Name="SendButton" x:FieldModifier="public" Content="Send" FontSize="16"
                                Width="120" Height="45" FontWeight="Bold"/>
                        <Button x:Name="SendCancelButton" x:FieldModifier="public" Content="Cancel" FontSize="16"
                                Width="120" Height="45" Margin="20,0,0,0" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,20">
                        <TextBlock Text="Progress:" FontSize="14" Margin="0,0,0,5"/>
                        <ProgressBar x:Name="SendProgressBar" x:FieldModifier="public" Height="20" Minimum="0" Maximum="100" Value="0"/>
                    </StackPanel>

                    <!-- Blank Section -->
                    <Grid Grid.Row="5"/>

                    <!-- Output Section -->
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Output:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="SendOutputTextBox" x:FieldModifier="public" Grid.Row="1" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas"
                                 FontSize="12" Height="80" IsReadOnly="True" Background="#F5F5F5"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
